{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/pre-commit-security.sh",
            "timeout": 30,
            "statusMessage": "Checking security review stamp..."
          },
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/pre-commit-lint.sh",
            "timeout": 30,
            "statusMessage": "Checking lint stamp..."
          }
        ]
      }
    ]
  }
}
